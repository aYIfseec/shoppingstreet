<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
    <property name="javaFileEncoding" value="utf-8"/>

    <!--使用 tk 插件 -->
    <plugin type="com.jiejing.mybatis.generator.plugins.MapperPlugin">
      <property name="mappers" value="com.hyk.shoppingstreet.tk.SqlMapper"/>
      <property name="caseSensitive" value="true"/>
      <property name="javaFileEncoding" value="utf-8"/>
    </plugin>
    <!-- 使用自定义的插件 -->
    <plugin type="com.jiejing.mybatis.generator.plugins.LombokPlugin">
      <property name="data" value="true"/>
      <property name="builder" value="true"/>
      <property name="noArgsConstructor" value="true"/>
      <property name="allArgsConstructor" value="true"/>
      <property name="javaFileEncoding" value="utf-8"/>
    </plugin>

    <jdbcConnection driverClass="${driverClass}"
      connectionURL="${connectionURL}"
      userId="${userId}"
      password="${password}">
    </jdbcConnection>

    <javaTypeResolver>
      <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <javaModelGenerator targetPackage="${modelPackage}" targetProject="${src_main_java}">
      <property name="enableSubPackages" value="true"></property>
      <property name="trimStrings" value="true"></property>
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="${sqlMapperPackage}" targetProject="${src_main_resources}">
      <property name="enableSubPackages" value="true"></property>
    </sqlMapGenerator>

    <javaClientGenerator targetPackage="${mapperPackage}" targetProject="${src_main_java}" type="XMLMAPPER">
      <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <!-- sql占位符，表示所有的表 -->
    <!--<table tableName="%">-->
      <!--<generatedKey column="epa_id" sqlStatement="Mysql" identity="true" />-->
    <table tableName="user_collection">
      <generatedKey column="id" sqlStatement="Mysql" identity="true" />
    </table>
  </context>
</generatorConfiguration>